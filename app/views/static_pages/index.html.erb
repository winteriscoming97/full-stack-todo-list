<div class="container">
      <div class="row text-center">
        <h1 class="col-12 pt-4 pb-2">Tasks</h1>
        <i class="fas fa-angle-down col-1 bg-white pl-2 pt-2 faded-font" style="font-size: 2.5em;"></i>
        <input class="col-11 py-3" type="text" name="todo-input" value="" placeholder="Enter new task..."/>
      </div>

      <!--  insert here  -->

      <!--  Task Template  -->
      <div class="row task pt-2 d-none">
        <span class="ml-2 mt-2 check-box"><i class="fas fa-check check-mark"></i></span>
        <h2 class="col-10">item</h2>
        <span class="ml-auto mt-2 mr-2 cancel"><p>x</p></span>
      </div>

      <!--  end of list  -->
      <div class="row end py-1 text-center">
          <p class="faded-font pt-2 pl-2 left-to-complete">0 items left</p>
          <div class="col-2"></div>
          <button type="button" class="btn btn-light border border-round faded-font btn-all">All</button>
          <button type="button" class="btn btn-light border border-round faded-font mx-4 btn-active">Active</button>
          <button type="button" class="btn btn-light border border-round faded-font btn-completed">Completed</button>
      </div>

    </div>
